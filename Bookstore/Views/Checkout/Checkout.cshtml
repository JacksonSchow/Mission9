@{
}

@*Form to checkout. Customer must enter all fields except Address Line 2*@

@model Checkout

<h1>Checkout</h1>

<form method="post" asp-action="Checkout">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h3>Personal Details</h3>

    <div class="form-group">
        <label asp-for="FirstName">First Name:</label>
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name:</label>
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone Number:</label>
        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
        <input asp-for="Phone" class="form-control" />
    </div>

    <h3>Billing Address</h3>

    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1:</label>
        @Html.ValidationMessageFor(m => m.AddressLine1, "", new { @class = "text-danger" })
        <input asp-for="AddressLine1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2 <span style="color:gray;">(Optional)</span>:</label>
        <input asp-for="AddressLine2" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City:</label>
        @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
        <input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State">State:</label>
        @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
        <input asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Zip">Zip:</label>
        @Html.ValidationMessageFor(m => m.Zip, "", new { @class = "text-danger" })
        <input asp-for="Zip" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Country">Country:</label>
        @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="float-left">
        <input class="btn btn-info" type="submit" value="Checkout" />
    </div>

</form>