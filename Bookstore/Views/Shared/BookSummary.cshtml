@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h3>@Model.Title</h3>
        <span><span style="color:gray;">by</span> @Model.Author</span>

        <span class="badge bg-success" style="float:right; color:white;">
            ISBN @Model.Isbn
        </span>
    </div>

    <ul>
        <li>Publisher: @Model.Publisher</li>
        <li>Classification: @Model.Classification</li>
        <li>Category: @Model.Category</li>
        <li>@Model.PageCount Pages</li>
        <li>Price: $@Model.Price</li>
    </ul>

    <form method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            <button type="submit" class="btn btn-outline-info float-right">Add to Cart</button>
        </span>
    </form>
</div>